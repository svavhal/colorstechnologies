<!-- Contact page start -->
<section id="Contact-page">
	<div class="container">
		<div class="row">



			<!-- Contact form start -->
			<div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
				<div class="contact-form">
					<h3>Contact us</h3>
					<%=form_for @contact,url: {:action=>"create",:controller=>"dashboards"}, :method=>:post do |f| %>  
						<div class="row">
							<div class="col-md-4">
								<div class="form-group">
									<label>Name</label>
				<%= f.text_field :name, :placeholder=>"Name",:id=>"name",:class=>"form-control", :required=>"true"%>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label>Email</label>
			<%= f.text_field :email,:id=>"email",:placeholder=>"Email Address",:class=>"form-control",:required=>"true"%>
								</div>
							</div>
							<div class="col-md-4">
								<div class="form-group">
									<label>Mobile No.</label>
				<%= f.text_field :phno,:id=>"pho",:placeholder=>"Mobile No" , :class=>"form-control",:required=>"true"%>
								</div>
							</div>
						</div>
						<div class="form-group">
							<label>Message</label>
						<%= f.text_area  :message,:id=>"message",:placeholder=>"Message",:cols=> 3,:rows=>8, :class=>"form-control",:required=>"true"%>
						</div>
						<div><br>
						
						<%=f.submit :Submit,:name=>"submit",:class =>"btn btn-primary",:id=>"submitButton",:value=>"Send Your Message",:title=>"Send Message"%> 
						</div>
					<% end %>
				</div><!-- Contact form end -->	
			</div> <!-- Col end -->

			<!-- sidebar start -->
			<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
				<div class="contact-info">
					<h3>Contact Info</h3>
					<p><h3>COLORS TECHNOLOGIES</h3></p>
